<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<!-- Change set 1 -->
	<changeSet id="1" author="symphony">
		<!--users -->
		<createTable tableName="user">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="name" type="varchar(255)">
				<constraints nullable="false" />
			</column>

			<column name="email" type="varchar(255)">
				<constraints nullable="false" unique="true" />
			</column>

			<column name="alt_email" type="varchar(255)" />

			<column name="password" type="varchar(255)"/>
	
			<column name="mobile" type="varchar(20)"/>

			<column name="user_role_id" type="bigint" />

			<column name="notification" type="varchar(255)" />

			<column name="manufacturer_id" type="bigint" />

			<column name="reseller_id" type="bigint" />
		</createTable>

		<!-- users_role -->
		<createTable tableName="users_role">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="role_name" type="varchar(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<!-- users_role_index -->
		<createTable tableName="user_role_index">
			<column name="users_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="user_role_id" type="bigint">
				<constraints nullable="false" />
			</column>
		</createTable>

		<!-- Manufacturer -->
		<createTable tableName="manufacturer">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="company_type" type="varchar(100)" />

			<column name="company_name" type="varchar(255)">
				<constraints nullable="false" />
			</column>

			<column name="pan" type="varchar(100)">
				<constraints nullable="false" />
			</column>

			<column name="cust_support_name" type="varchar(255)" />

			<column name="cust_support_phone" type="varchar(100)" />

			<column name="cust_spport_email" type="varchar(255)" />

			<column name="cur_subscription_type" type="varchar(50)" />

			<column name="cur_subscription_startdate" type="timestamp" />

			<column name="cur_subscription_enddate" type="timestamp" />

			<column name="cur_subscription_status" type="varchar(100)" />
		</createTable>

		<!-- Reseller -->
		<createTable tableName="reseller">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="fld_manuid" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="company_name" type="text" />

			<column name="pan" type="text" />

			<column name="cust_spport_name" type="text" />

			<column name="cust_support_phone" type="text" />

			<column name="cust_spport_email" type="text" />

			<column name="cur_subscription_type" type="text" />

			<column name="cur_subscription_status" type="text" />

			<column name="cur_subscription_startdate" type="timestamp" />

			<column name="cur_subscription_enddate" type="timestamp" />
		</createTable>

		<createTable tableName="customer">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="company_type" type="varchar(100)" />

			<column name="company_name" type="varchar(255)">
				<constraints nullable="false" />
			</column>

			<column name="pan" type="varchar(100)">
				<constraints nullable="false" />
			</column>

			<column name="cust_support_name" type="varchar(255)" />

			<column name="cust_support_phone" type="varchar(20)" />

			<column name="cust_support_email" type="varchar(200)" />

			<column name="cur_subscription_type" type="varchar(50)" />

			<column name="cur_subscription_startdate" type="timestamp" />

			<column name="cur_subscription_enddate" type="timestamp" />

			<column name="cur_subscription_status" type="cur_subscription_status" />

		</createTable>

		<!-- Machine Documents -->
		<createTable tableName="machine_documents">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="manufacturer_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="model_number" type="varchar(100)" />

			<column name="document_path" type="varchar(255)" />

			<column name="description" type="varchar(255)" />
		</createTable>

		<createTable tableName="qr_codes">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="qr_code" type="varchar(100)">
				<constraints nullable="false" />
			</column>

			<column name="batch_name" type="varchar(100)">
				<constraints nullable="false" />
			</column>

			<column name="status" type="varchar(100)">
				<constraints nullable="false" />
			</column>

			<column name="created_by" type="bigint">
				<constraints nullable="false" />
			</column>
		</createTable>

		<!-- machine -->

		<createTable tableName="machine">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="qr_code_id" type="bigint" />

			<column name="serial_number" type="varchar(100)" />

			<column name="name" type="varchar(255)" />

			<column name="description" type="text" />

			<column name="model_number" type="varchar(100)" />

			<column name="machine_year" type="varchar(10)" />

			<column name="customer_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="manufacture_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="reseller_id" type="bigint" />

			<column name="installation_date" type="timestamp" />

			<column name="warranty_expiry_date" type="timestamp" />

			<column name="location_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="cur_amc_type" type="varchar(50)" />

			<column name="cur_amc_startdate" type="timestamp" />

			<column name="cur_amc_enddate" type="timestamp" />

			<column name="cur_amc_status" type="varchar(100)" />

			<column name="cur_subscription_type" type="varchar(50)" />

			<column name="cur_subscription_startdate" type="timestamp" />

			<column name="cur_subscription_enddate" type="timestamp" />

			<column name="support_assistance" type="bigint" />

		</createTable>

		<!-- Complaint Details -->

		<createTable tableName="complaint_details">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="machine_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="reporting_device" type="bigint" />

			<column name="details" type="text" />

			<column name="status" type="varchar(100)" />

			<column name="date_reported" type="timestamp" />

			<column name="date_assigned" type="timestamp" />

			<column name="date_closed" type="timestamp" />

			<column name="assigned_to" type="bigint" />

			<column name="failure_reason" type="text" />

			<column name="action_taken" type="text" />

			<column name="phonedevice_operator_name" type="varchar(255)" />

			<column name="machine_location_id" type="bigint" />

			<column name="machine_location_name_address" type="text" />

			<column name="customer_id" type="bigint" />

			<column name="customer_company_name" type="varchar(255)" />

			<column name="manufacturer_id" type="bigint" />

			<column name="reseller_id" type="bigint" />

			<column name="machine_support_assistance" type="bigint" />

			<column name="machine_model_number" type="varchar(100)" />

			<column name="machine_serial_number" type="varchar(100)" />

			<column name="mahicne_installation_date" type="timestamp" />

			<column name="techinician_id" type="bigint" />

		</createTable>

		<!-- Complaint -->
		<createTable tableName="complaint">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="issue_number" type="varchar(100)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<!-- Complaint Issue Number -->
		<createTable tableName="complaint_issue_number">
			<column name="complaint_detail_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="complaint_id" type="bigint">
				<constraints nullable="false" />
			</column>
		</createTable>

		<!-- Company Location -->
		<createTable tableName="company_location">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="customer_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="address" type="jsonb" />

			<column name="contact_person" type="varchar(255)">
				<constraints nullable="false" />
			</column>

			<column name="contact_mobile" type="varchar(10)">
				<constraints nullable="false" />
			</column>

		</createTable>

		<!-- Machine Amc History -->
		<createTable tableName="machine_amc_history">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="machine_id" type="bigint">
				<constraints nullable="false" />
			</column>

			<column name="amc_type" type="varchar(50)" />

			<column name="amc_startdate" type="timestamp" />

			<column name="amc_enddate" type="timestamp" />

			<column name="details" type="text" />

			<column name="amc_status" type="char(50)" />
		</createTable>

		<!-- machine_amc_service_history -->
		<createTable tableName="machine_amc_service_history">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>

			<column name="machine_id" type="bigint" />

			<column name="amc_id" type="bigint" />

			<column name="details" type="text" />

			<column name="servicing_assigned_date" type="timestamp" />

			<column name="servicing_done_date" type="timestamp" />

			<column name="assinged_to" type="bigint" />

			<column name="action_taken" type="text" />

			<column name="status" type="varchar(50)" />

			<column name="company_id" type="bigint">
				<constraints nullable="false" />
			</column>

		</createTable>
		
		<!-- Complaint Operator -->
		<createTable tableName="complaint_operator">
		<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			
			<column name="fld_mobile_number" type="varchar(20)">
			<constraints nullable="false"/>
			</column>
			
			<column name="fld_name" type="varchar(255)">
			<constraints nullable="false"/>
			</column>
			
			<column name="fld_otp" type="varchar(100)"/>
			
			<column name="fld_fcm_token" type="varchar(255)">
			<constraints nullable="false"/>
			</column>
		</createTable>
		
		<!-- tech_manufacturer -->
		<createTable tableName="tech_manufacturer">
		<column name="userid" type="bigint">
		<constraints nullable="false"/>
		</column>
		<column name="manufacturer_id" type="bigint">
		<constraints nullable="false"/>
		</column>
		</createTable>
		
		<!-- tech_reseller -->
		<createTable tableName="tech_reseller">
		<column name="userid" type="bigint">
		<constraints nullable="false"/>
		</column>
		
		<column name="reseller_id" type="bigint">
		<constraints nullable="false"/>
		</column>
				
		</createTable>
	</changeSet>
</databaseChangeLog>